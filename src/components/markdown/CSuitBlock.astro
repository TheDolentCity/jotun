---
import {
  ArrowBigUpDash,
  BicepsFlexed,
  Bolt,
  ChevronsUp,
  Computer,
  Proportions,
  Router,
  Shield,
  SquareActivity,
  Thermometer,
} from "@lucide/astro";

interface Props {
  size: string;
  armor: string;
  details?: string;
  details2?: string;
  description: string;

  hp: string;
  speed: string;
  sensors: string;
}

let {
  size,
  armor,
  details,
  details2,
  description,
  hp,
  speed,
  sensors,
} = Astro.props;
---

<div
  class="not-prose border-2 rounded-lg border-gray-900 dark:border-accent-400"
>
  <div
    class="p-3 rounded-t bg-gray-900 dark:bg-accent-400 text-gray-200 dark:text-gray-950"
  >
    <div class="flex gap-6 items-center text-sm uppercase font-semibold">
      <div class="flex gap-1 items-center leading-none">
        <Proportions class="size-4" />
        <span>Size {size}</span>
      </div>
      <div class="flex gap-1 items-center leading-none">
        <Shield class="size-4" />
        <span>Armor {armor}</span>
      </div>
      <div class="flex gap-1 items-center leading-none">
        <SquareActivity class="size-4" />
        <span>HP {hp}</span>
      </div>
      <div class="flex gap-1 items-center leading-none">
        <ChevronsUp class="size-4" />
        <span>Speed {speed}</span>
      </div>
      <div class="col-span-4 flex gap-1 items-center leading-none">
        <Router class="size-4" />
        <span>Sensors {sensors}</span>
      </div>
    </div>
  </div>
  <div class="p-2 text-base text-gray-600 dark:text-gray-400 leading-normal">
    {
      details && (
        <p class="pb-4 text-gray-900 dark:text-gray-200 whitespace-pre-line">
          {details}
        </p>
      )
    }
    {
      details2 && (
        <hr class="pb-4 border-t border-dashed border-gray-900 dark:border-gray-200" />
        <p class="pb-4 text-gray-900 dark:text-gray-200 whitespace-pre-line">
          {details2}
        </p>
      )
    }
    <p class="italic whitespace-pre-line">
      {description}
    </p>
  </div>
</div>
